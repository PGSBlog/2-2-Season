<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/soongsil1" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="ENGLISH\nWORDS\nTEST"
            android:textColor="#808080"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="horizontal"
        android:columnCount="2"
        android:alignmentMode="alignBounds">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="10dp"
                android:background="@drawable/round_box"
                android:drawableTop="@drawable/draw_01"
                android:onClick="Button1stOnClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영단어 암기"
                android:textStyle="bold"
                android:textColor="#808080"
                android:typeface="monospace"
                android:textSize="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="10dp"
                android:background="@drawable/round_box2"
                android:drawableTop="@drawable/draw_02"
                android:onClick="Button2ndOnClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영단어 게임"
                android:textStyle="bold"
                android:textColor="#808080"
                android:typeface="monospace"
                android:textSize="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="10dp"
                android:background="@drawable/round_box3"
                android:drawableTop="@drawable/draw_03"
                android:onClick="Button3rdOnClick" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영단어 추가"
                android:textStyle="bold"
                android:textColor="#808080"
                android:typeface="monospace"
                android:textSize="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="10dp"
                android:background="@drawable/round_box"
                android:drawableTop="@drawable/draw_04"
                android:onClick="Button4thOnClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 단어"
                android:textStyle="bold"
                android:textColor="#808080"
                android:typeface="monospace"
                android:textSize="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:gravity="right|bottom">
        <ImageButton
            android:id="@+id/BtnPapago"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:src="@drawable/draw_05"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</LinearLayout>

